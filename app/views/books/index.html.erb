
<% if flash[:destroy] %>
<p><%= flash[:destroy] %></p>
<% end %>

<h1 class="index_heading">Books</h1>

<table class="index">
  <tr>
    <th>Title</th>
    <th>Body</th>
  </tr>
  <% @books.each do |book| %>
  <tr>
    <td><%= book.title %></td>
    <td><%= book.body %></td>
    <td><%= link_to 'Show', book_path(book) %></td>
    <td><%= link_to 'Edit', edit_book_path(book) %></td>
    <td><%= link_to 'Destroy', destroy_book_path(book), method: :delete, data: { confirm: "本当に削除しますか？" }  %></td>
    <% end %>
  </tr>
  </table>

<h2>New book</h2>
<%= render 'layouts/error_messages' %>
<%= form_with model:@book, local:true do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>
  <h4>Body</h4>
  <%= f.text_area :body %>
  <%= f.submit 'Create Book' %>
<% end %>
