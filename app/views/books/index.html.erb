
<% if flash[:destroy] %>
<p class="flash"><%= flash[:destroy] %></p>
<% end %>

<h2 class="heading">Books</h2>

<table class="index">
  <tr>
    <th>Title</th>
    <th>Body</th>
  </tr>
  <% @books.each do |book| %>
  <tr>
    <td class="book"><%= book.title %></td>
    <td class="book"><%= book.body %></td>
    <td class="link"><%= link_to 'Show', book_path(book) %></td>
    <td class="link"><%= link_to 'Edit', edit_book_path(book) %></td>
    <td class="link"><%= link_to 'Destroy', destroy_book_path(book), method: :delete, data: { confirm: "Are you sure?" }  %></td>
    <% end %>
  </tr>
  </table>

<section class="form">
<h3>New book</h3>
<%= form_with model:@book,local:true do |f| %>
  <% if @book.errors.any? %>
    <div class = "alert">
      <h4 class="errors-count"><%= pluralize(@book.errors.count, "error") %> prohibited this book from being saved:</h4>
      <ul>
          <% @book.errors.full_messages.each do |message| %>
          <li><%= message %></li>
          <% end %>
      </ul>
    </div>
  <% end %>

    <h5 class="book-form">Title</h5>
      <%= f.text_field :title %>
    <h5 class="book-form">Body</h5>
      <%= f.text_area :body %>
    <div class="book-form">
      <%= f.submit 'Create Book' %>
    </div>
<% end %>
</section>
