
<% if flash[:destroy] %>
<p><%= flash[:destroy] %></p>
<% end %>

<h1 class="index_heading">Books</h1>

<table class="index">
  <tr>
    <th>Title</th>
    <th>Body</th>
  </tr>
  <% @books.each do |book| %>
  <tr>
    <td><%= book.title %></td>
    <td><%= book.body %></td>
    <td><%= link_to 'Show', book_path(book) %></td>
    <td><%= link_to 'Edit', edit_book_path(book) %></td>
    <td><%= link_to 'Destroy', destroy_book_path(book), method: :delete, data: { confirm: "本当に削除しますか？" }  %></td>
    <% end %>
  </tr>
  </table>

<h2>New book</h2>
<%= form_with model:@book,local:true do |f| %>
  <% if @book.errors.any? %>
    <div class = "alert">
      <h4><%= pluralize(@book.errors.count, "error") %> prohibited this product from being saved:</h4>
      <ul>
          <% @book.errors.full_messages.each do |message| %>
          <li><%= message %></li>
          <% end %>
      </ul>
    </div>
  <% end %>

<h4>Title</h4>
  <%= f.text_field :title %>
<h4>Body</h4>
  <%= f.text_area :body %>
  <%= f.submit 'Create Book' %>
<% end %>
